<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:strokeColor="@color/primaryContainer"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/registration_config"
                    android:textColor="@color/onPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvConfigByteValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/primaryContainer"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Checkboxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbReceiptPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_receipt_payment"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbReceiptAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_receipt_admin"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbIntermediateStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_intermediate_status"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbAllowPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_allow_payment"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbAllowAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_allow_admin"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbTlvSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_tlv_support"
                    android:textSize="12sp" />

                <!-- TLV Warning -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reg_tlv_warning"
                    android:textColor="@color/warning"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/divider" />

            <!-- Save button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveConfig"
                style="@style/ZvtButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="12dp"
                android:text="@string/btn_save" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
